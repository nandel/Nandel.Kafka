{
    "kafka": {
        "Brokers": [
            "localhost:9092"
        ],
        "SaslUsername": "",
        "SaslPassword": ""
    },
    
    "ConnectionStrings": {
        "Postgres": "Host=localhost;Port=5432;Username=postgres;Password=postgres;Database=kafka-sandbox-webapi;Pooling=true;"
    },
    
    "Serilog": {
        "MinimumLevel": {
            "Default": "Debug",
            "Override": {
                "Microsoft": "Warning",
                "Microsoft.Hosting": "Information"
            }
        },
        "WriteTo": [
            {
                "Name": "Console",
                "Args": {
                    "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
                    "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} <s:{SourceContext}>{NewLine}{Exception}"
                }
            }
        ]
    }
}
